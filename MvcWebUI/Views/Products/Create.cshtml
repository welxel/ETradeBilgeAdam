@*@model Entities.Entities.Product*@
@model ProductModel

@{
    ViewData["Title"] = "Create New Product";
}

<h1>@ViewData["Title"]</h1>

<h4>Product</h4>
<hr />
<div class="row">
    @*<div class="col-md-4">*@
    <div class="col-md-6">

        @*<form asp-action="Create" asp-controller="Products" method="post" autocomplete="off">*@
        @*<form asp-action="Create" autocomplete="off">*@
        @*@using (Html.BeginForm(FormMethod.Post, new { autocomplete = "off", enctype="multipart/form-data" }))*@
        <form asp-action="Create" autocomplete="off" enctype="multipart/form-data">

            @*@if (ViewBag.Message != null)
            { 
                <p class="text-danger">
                    @ViewBag.Message
                </p>
            }*@

            @Html.AntiForgeryToken()

            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                @*<input asp-for="Description" class="form-control"/>*@
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                    <label asp-for="UnitPrice"></label>
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="UnitPriceText"></label>
                <input asp-for="UnitPriceText" class="form-control"/>
                <span asp-validation-for="UnitPriceText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockAmount"></label>
                <input asp-for="StockAmount" class="form-control"/>
                <span asp-validation-for="StockAmount" class="text-danger"></span>
            </div>

            <!--<div class="form-group">
            <label asp-for="ExpirationDate"></label>-->
            @*<input asp-for="ExpirationDate" class="form-control"/>*@
            <!--<input asp-for="ExpirationDate" class="form-control expiration-date" type="text"/>
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="ExpirationDateText"></label>
                @*<input asp-for="ExpirationDateText" class="form-control"/>*@
                <input asp-for="ExpirationDateText" class="form-control expiration-date" type="text"/>
                <span asp-validation-for="ExpirationDateText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                @*<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>*@
                @*<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories as SelectList">*@
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                    <label asp-for="Guid"></label>
                    <input asp-for="Guid" class="form-control"/>
                    <span asp-validation-for="Guid" class="text-danger"></span>
                </div>*@

            <div class="form-group">
                <label>Image</label>
                <br />

                @*<input type="file" name="image" accept=".jpg, .jpeg, .png" />*@
                <input type="file" name="image" accept="@AppSettings.AcceptedImageExtensions" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Product List</a>
</div>

@section Scripts
{
    <link href="~/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    @*<script src="~/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>*@
    <script>
        //$(document).ready(function() {

        //});
        //$(function() {

        //});
        $(() => {
            $('.expiration-date').datepicker({
                todayBtn: "linked",
                clearBtn: true,
                //language: "tr",
                orientation: "top auto",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}
