@model ProductModel
@{
    ViewData["Title"] = "Edit Product";
}
<h1>@ViewData["Title"]</h1>
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">

        @*<form asp-action="Edit" autocomplete="off">*@
        <form asp-action="Edit" autocomplete="off" enctype="multipart/form-data">

            <input asp-for="Id" type="hidden"/>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPriceText"></label>
                <input asp-for="UnitPriceText" class="form-control"/>
                <span asp-validation-for="UnitPriceText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockAmount"></label>
                <input asp-for="StockAmount" class="form-control"/>
                <span asp-validation-for="StockAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDateText"></label>
                <input asp-for="ExpirationDateText" class="form-control expiration-date" type="text"/>
                <span asp-validation-for="ExpirationDateText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label>Image</label>
                <br />
                <input type="file" name="image" accept="@AppSettings.AcceptedImageExtensions" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info"/>
                &nbsp;&nbsp;&nbsp;
                <a asp-action="DeleteProductImage" asp-route-id="@Model.Id" class="btn btn-danger">Delete Product Image</a>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to Product List</a>
</div>

@section Scripts
{
    <link href="~/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(() => {
            $('.expiration-date').datepicker({
                todayBtn: "linked",
                clearBtn: true,
                orientation: "top auto",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}