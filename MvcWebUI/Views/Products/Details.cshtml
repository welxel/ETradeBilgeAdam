@*@model Entities.Entities.Product*@
@model ProductModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.UnitPrice)*@
            @Html.DisplayNameFor(model => model.UnitPriceText)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.UnitPrice)*@
            $@Html.DisplayFor(model => model.UnitPriceText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StockAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockAmount)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.ExpirationDate)*@
            @Html.DisplayNameFor(model => model.ExpirationDateText) (Year/Month/Day)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.ExpirationDate)*@
            @Html.DisplayFor(model => model.ExpirationDateText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFileName)
        </dt>
        <dd class="col-sm-4">
            @if (!string.IsNullOrWhiteSpace(Model.ImageFileName))
            {
                <img src="/files/products/@Model.ImageFileName" class="img-fluid" />
            }
        </dd>

        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Guid)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Guid)
            </dd>*@
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> @:|
    }
    <a asp-action="Index">Back to Product List</a>
</div>
