@*@model IEnumerable<Entities.Entities.Product>*@
@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Product List";
}

<h1>@ViewData["Title"]</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" asp-controller="Products"><i class="fas fa-plus"></i> Create New Product</a>
    </p>
}

@*@if (TempData["ProductsMessage"] != null)
    {
        <p class="bg-success text-white">@TempData["ProductsMessage"]</p>
    }*@
@if (ViewData["ProductsMessage"] != null)
{
    <p class="bg-success text-white">@ViewData["ProductsMessage"]</p>
}

<table id="products" class="display" style="width: 100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.UnitPrice)*@
                @Html.DisplayNameFor(model => model.UnitPriceText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockAmount)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ExpirationDate)*@
                @Html.DisplayNameFor(model => model.ExpirationDateText) (Year/Month/Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            
            <th style="width: 15%;">
                @Html.DisplayNameFor(model => model.ImageFileName)
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.Guid)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>*@
                <td>
                    @*@Html.DisplayFor(modelItem => item.UnitPrice)*@
                    $@Html.DisplayFor(modelItem => item.UnitPriceText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockAmount)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ExpirationDate)*@
                    @Html.DisplayFor(modelItem => item.ExpirationDateText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.ImageFileName))
                    {
                        <img src="/files/products/@item.ImageFileName" class="img-thumbnail" />
                    }
                </td>

                @*<td>
                        @Html.DisplayFor(modelItem => item.Guid)
                    </td>*@
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("User"))
                        {
                            <a asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@item.Id"><i class="fas fa-cart-plus"></i> Add to Cart</a>
                            @:&nbsp;|&nbsp;
                            if (ViewBag.ProductId != null)
                            {
                                if (item.Id == Convert.ToInt32(ViewBag.ProductId))
                                {
                                    <a class="text-success" title="Last product added to cart"><i class="fas fa-check-square"></i></a>
                                    @:&nbsp;|&nbsp;
                                }
                            }
                        }

                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-lg fa-info-circle"></i> Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                            @:&nbsp;|&nbsp;
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-lg fa-pen-square"></i> Edit</a>
                            @:&nbsp;|&nbsp;
                            <a href="#" onclick="deleteProduct(@item.Id);"><i class="fas fa-lg fa-trash"></i> Delete</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/datatables.js"></script>
    <link href="~/lib/AlertifyJS/css/alertify.min.css" rel="stylesheet" />
    <script src="~/lib/AlertifyJS/alertify.min.js"></script>
    <script>
        $(function () {
            //$("#products").DataTable();
            BindDataTable("products");
        });

        function deleteProduct(id) {
            alertify.confirm("Warning!",
                "Are you sure do you want to delete this product?",
                function () { // OK
                    //alertify.success("Delete successful.");
                    window.location.href = "/Products/Delete/" + id;
                },
                function () { // Cancel
                    alertify.error("Delete canceled.");
                }
            );
        }
    </script>
}
