<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@AppSettings.Title | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header div-header">
                <a class="a-navbar" asp-action="Index" asp-controller="Home"><h5><i class="fas fa-shopping-basket"></i> @AppSettings.Title</h5></a>
            </div>
            <ul class="list-unstyled components">
                <li class="nav-item">
                    @*<a class="a-sidebar" asp-action="Index" asp-controller="Products"><i class="fas fa-clipboard-list"></i> Products</a>*@
                    <a href="/Products/Index" class="a-sidebar"><i class="fas fa-clipboard-list"></i> Products</a>
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <ul class="list-unstyled admin">
                    <p>Domains</p>
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="Categories"><i class="fas fa-bars"></i> Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="Countries"><i class="fas fa-bars"></i> Countries</a>
                    </li>
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="Cities"><i class="fas fa-bars"></i> Cities</a>
                    </li>
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="Users"><i class="fas fa-bars"></i> Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="Roles"><i class="fas fa-bars"></i> Roles</a>
                    </li>
                </ul>
                <ul class="list-unstyled admin">
                    <p>Reports</p>
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="ProductsReportAjax"><i class="fas fa-archive"></i> Products Report</a>
                    </li>
                </ul>
            }
        </nav>
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" id="sidebarCollapse" class="a-navbar" title="Close Menu">
                            <i class="fas fa-list-alt"></i>
                            <i id="i-collapse" class="fas fa-chevron-left"></i> Menu
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-span"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                            {
                                <a class="a-navbar" asp-action="Index" asp-controller="Cart"><i class="fas fa-shopping-cart"></i> Cart</a>
                            }
                        </li>
                    </ul>
                    <div class="navbar-text">
                        <ul class="navbar-nav mr-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Register" asp-controller="Accounts"><i class="far fa-save"></i> Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Login" asp-controller="Accounts"><i class="fas fa-sign-in-alt"></i> Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <div class="div-navbar">
                                        <span class="s-navbar"><i class="fas fa-user"></i> @User.Identity.Name</span>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Logout" asp-controller="Accounts"><i class="fas fa-sign-out-alt"></i> Logout</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
